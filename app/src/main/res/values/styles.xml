<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme">
        <item name="colorNavigationItem">@color/orange</item>
        <item name="colorNavigationItemSelected">@color/white</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>
        <item name="backgroundColor">@color/lighter_orange</item>
        <item name="android:background">@color/lighter_orange</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textColorHint">@color/lightgrey</item>
    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>

    <style name="EditorFieldStyle">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColorHint">@color/lightgrey</item>
    </style>

    <style name="alertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@drawable/alert_dialog_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="ButtonTheme">
        <item name="android:gravity">center|center_horizontal|center_vertical</item>
        <item name="android:layout_gravity">center_vertical|center|center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:background">@drawable/change_button_color</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="whiteButtonTheme">
        <item name="android:gravity">center|center_horizontal|center_vertical</item>
        <item name="android:layout_gravity">center_vertical|center|center_horizontal</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:background">@drawable/change_imagebutton_color</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewTheme">
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">end</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="AutoCompleteTheme">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColorHint">@color/lightgrey</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ImageTheme">
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:src">@drawable/plumbill_logo1_transparent</item>
        <item name="android:contentDescription">@string/todo</item>
        <item name="contentDescription">@string/todo</item>
    </style>

</resources>