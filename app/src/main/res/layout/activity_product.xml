<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AppTheme">

    <ImageView
        android:id="@+id/imageView2"
        style="@style/ImageTheme"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="@dimen/margin"
        app:layout_constraintBottom_toTopOf="@+id/add_item_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/add_item_button"
        style="@style/ButtonTheme"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/add_item"
        app:layout_constraintBottom_toTopOf="@+id/remove_item_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/remove_item_button"
        style="@style/ButtonTheme"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/delete_item"
        app:layout_constraintBottom_toTopOf="@+id/update_item_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_item_button" />

    <Button
        android:id="@+id/update_item_button"
        style="@style/ButtonTheme"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/update_item"
        app:layout_constraintBottom_toTopOf="@id/view_item_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remove_item_button" />

    <Button
        android:id="@+id/view_item_button"
        style="@style/ButtonTheme"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/view_an_item"
        app:layout_constraintBottom_toTopOf="@id/view_all_items_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_item_button" />

    <Button
        android:id="@+id/view_all_items_button"
        style="@style/ButtonTheme"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="@string/view_all_items"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_item_button" />

</androidx.constraintlayout.widget.ConstraintLayout>