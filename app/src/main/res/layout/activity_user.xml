<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AppTheme">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/plumbill_logo1_transparent"
        app:layout_constraintBottom_toTopOf="@+id/add_user_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_user_button"
        style="@style/ButtonTheme"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/add_user"
        app:layout_constraintBottom_toTopOf="@+id/remove_user_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/remove_user_button"
        style="@style/ButtonTheme"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/delete_user"
        app:layout_constraintBottom_toTopOf="@+id/update_user_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_user_button" />

    <Button
        android:id="@+id/update_user_button"
        style="@style/ButtonTheme"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/update_user"
        app:layout_constraintBottom_toTopOf="@+id/view_user_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remove_user_button" />

    <Button
        android:id="@+id/view_user_button"
        style="@style/ButtonTheme"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/view_user"
        app:layout_constraintBottom_toTopOf="@+id/view_all_users_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_user_button" />

    <Button
        android:id="@+id/view_all_users_button"
        style="@style/ButtonTheme"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="@string/view_all_users"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_user_button" />

</androidx.constraintlayout.widget.ConstraintLayout>